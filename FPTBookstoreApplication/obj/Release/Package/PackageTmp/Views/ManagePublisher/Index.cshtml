@model IEnumerable<FPTBookstoreApplication.Models.Publisher>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}

<h2 style="margin: 3% 0 5% 45%; font-style:italic; color:chocolate">List of Publishers</h2>
<button style="margin:2% 0 2% 80%;" class="btn btn-info">
    @Html.ActionLink("Add New Publisher", "AddPublisher1", "ManagePublisher")
</button>
<table class="table table-striped table-dark">
    <tr style="text-align:center">
        <th>
            @Html.DisplayNameFor(model => model.PublisherId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PublisherName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="text-align:center">
            <td>
                @Html.DisplayFor(modelItem => item.PublisherId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublisherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditPublisher1", new { id = item.PublisherId })
                @Html.ActionLink("Delete", "DeletePublisher", new { id = item.PublisherId }, new { onclick = $"return confirm('Are you sure to detele {item.PublisherName}?')" })
            </td>
        </tr>
    }

</table>





