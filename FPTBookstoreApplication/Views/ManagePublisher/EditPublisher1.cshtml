@model FPTBookstoreApplication.Models.Publisher

@{
    ViewBag.Title = "EditPublisher1";
    Layout = "~/Views/Shared/_AdminPage.cshtml";
}


<div class="wrapper">

    @using (Html.BeginForm("EditPublisher1", "ManagePublisher", FormMethod.Post, new { @class = "login-form", role = "form" }))
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="header">
            <h2 class="header-login">Update Publisher</h2>
        </div>

        <div class="login-items">

            <div class="username-password-items">
                @Html.HiddenFor(m => m.PublisherId)

                <p>@Html.LabelFor(m => m.PublisherName, new { @class = "header-input-item" })</p>
                @Html.TextBoxFor(m => m.PublisherName, new { @class = "input-item" })
                @Html.ValidationMessageFor(model => model.PublisherName, "", new { @class = "text-danger" })

                <p>@Html.LabelFor(m => m.Description, new { @class = "header-input-item" })</p>
                @Html.TextBoxFor(m => m.Description, new { @class = "input-item" })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>

            <div style="margin-bottom:5%;" class="btn-item">
                <button type="submit" class="submit-btn1">Update</button>
            </div>
            <div class="btn-item">
                <button class="submit-btn23">
                    @Html.ActionLink("Cancel", "Index", "ManagePublisher")
                </button>
            </div>
        </div>

    }
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>