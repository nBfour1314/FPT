
@{
   ViewBag.Title = "Home Page";
}

@* Banner *@

<!-- Search-->

@using (Html.BeginForm())
{<div style="margin-top: 20%; margin-left:5%;" class="mt-3">

        <div class="row">
            <div class="col col-sm-7">
                @Html.TextBox("searchingstring", "", new { @class = "form-control", type = "text" })
            </div>
            <div class="col col-sm-5">
                <button class="btn btn-info">
                    Search
                </button>
            </div>
        </div>

    </div>
}

@* Product *@
<section class="about py-5">
    <div class="container pb-lg-3">
        <h3 class="tittle text-center">New Books</h3>

        @model IEnumerable<FPTBookstoreApplication.Models.Book>
        <div class="row">
            @foreach (var book in Model)
            {
                <div style="margin-top:5%;" class="col-md-4 product-men">
                    <div class="product-shoe-info shoe text-center">
                        <div class="men-thumb-item">
                            <img src="~/Assets/images/img-Books/@book.Img" class="img-fluid" alt="@book.BookId">
                        </div>
                        <div class="item-info-product">
                            <h4>
                                @Html.ActionLink(book.BookName, "BookDetail", new { id = book.BookId })
                            </h4>

                            @if (book.Author != null)
                            {
                                <h6 style="opacity:0.6; font-style:italic">
                                    by: @book.Author.AuthorName
                                </h6>
                            }

                            <div class="product_price">
                                <span>
                                    <div class="grid-price">
                                        <span class="money">@book.Price .00 $</span>
                                    </div>
                                </span>
                                <div style="margin-bottom: 10px; display: grid;" class="add-block ">
                                    <a class="btn-details btn btn-info" id="btn_add" href="@Url.Action("Add", "Cart",book)">
                                        Add To Cart
                                    </a>
                                </div>
                                <div style=" display: grid;" class="detail-block">
                                    @Html.ActionLink("Detail Information", "BookDetail", new { id = @book.BookId }, new { @class = "btn-details btn btn-info" })
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


